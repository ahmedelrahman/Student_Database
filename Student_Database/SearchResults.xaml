<Window x:Class="Student_Database.SearchResults"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Database"
        mc:Ignorable="d"
        Title="SearchResults" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <ListView x:Name="CollectionOfStudents" Grid.Row="1" Grid.Column="5" Width="789" Height="auto" Background="LightGray" Grid.RowSpan="5" Margin="0,0,0,-0.286" >
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Delete" Click="DeleteStudent"/>
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>

            <Button Visibility="Hidden" Click="DeleteStudent" Content="Button" Height="421.714285714286" VerticalAlignment="Top" Width="75"/>


        </DockPanel>
    </Grid>
</Window>
